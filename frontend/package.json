{
    "name": "my-desktop-app",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "package": "electron-builder"
    },
    "build": {
      "appId": "com.example.myapp",
      "directories": {
        "buildResources": "assets"
      },
      "files": [
        "**/*",
        "../build/backend.exe"
      ],
      "win": {
        "target": "nsis"
      }
    },
    "devDependencies": {
      "electron": "^29.0.0",
      "electron-builder": "^24.0.0"
    }
  }
  